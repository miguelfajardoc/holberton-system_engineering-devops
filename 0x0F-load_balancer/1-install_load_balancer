#!/usr/bin/env bash
# Script that set the load balancer configurations for two servers
sudo apt-get -y install software-properties-common
sudo add-apt-repository ppa:vbernat/haproxy-1.8
sudo apt-get update
sudo apt-get -y install haproxy=1.8.\*

sudo echo -e "\nfrontend haproxynode\n\tbind *:80\n\tmode http\n\tdefault_backend backend-web\nbackend backend-web\n\bbalance roundrobin\n\tserver web-1 35.229.39.180 check\n\tserver web-2 34.74.15.139 check" | sudo tee -a /etc/haproxy/haproxy.cfg
sudo service haproxy restart
